<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="byIndex" class="com.zeratul.Person">
<constructor-arg index="0" value="1"></constructor-arg>
<constructor-arg index="1" value="Zeratul_1"></constructor-arg>
</bean>

<bean id="byType" class="com.zeratul.Person">
<constructor-arg type="int" value="2"></constructor-arg>
<constructor-arg type="java.lang.String" value="Zeratul_2"></constructor-arg>
</bean>

<bean id="byName" class="com.zeratul.Person">
<constructor-arg name="idCard" value="3"></constructor-arg>
<constructor-arg name="name" value="Zeratul_3"></constructor-arg>
</bean>


</beans>