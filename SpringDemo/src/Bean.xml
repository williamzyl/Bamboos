<?xml version="1.0" encoding="UTF-8"?>

 <beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 
      <bean id="info"   class="com.zeratul.Info">
       
       <constructor-arg index="0" value="Will.Zeratul"/> 
           <property name="name" value="Zeratul"/>
       </bean>

       
       <bean  name="zeratul" class="com.zeratul.Info">
           <property name="name" value="Zeratul.Zhang"/>
       </bean>
       <alias name="zeratul" alias="zhang"/>
       
       
       <bean id="infoFactory" class="com.zeratul.InfoFactory">
       <!-- <constructor-arg index="0" value="Zeratul"></constructor-arg> -->
       </bean>
       
       
       <bean id="infoBean"  factory-bean="infoFactory" factory-method="newInstance">
      <constructor-arg index="0" value="Zeratul.Zhang"></constructor-arg>
       </bean>
       
    </beans>